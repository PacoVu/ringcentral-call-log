<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>RingCentral Export Data</title>
    <link href="./img/favicon.png" type="image/vnd.microsoft.icon" rel="shortcut icon">
    <link href="./img/favicon.png" type="image/vnd.microsoft.icon" rel="icon">
    <script src="js/calllogs.js" type="text/javascript"></script>
    <script src="js/jquery-3.1.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/css/bootstrap-select.min.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" type="text/css" href="css/ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.3/js/bootstrap-select.min.js"></script>
</head>
<body onload="init()">
  <nav id="menu_header" class="navbar navbar-default no-border">
    <span class="left-middle-align">
      <span class="rclogo"><a href="/"><img alt="Brand" src="img/ringcentral-labs-logo.png" height="40"></a></span>&nbsp;&nbsp;
      <span class="title">Export Data</span>
    </span>
    <ul class="nav navbar-nav navbar-left left-align-nav">
      <li class="active"><a href="/export-call-logs">Call Logs</a></li>
      <li><a href="/export-message-store">Message Store</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right middle-align">
      <li><span><b><%- userName %></b></span></li>
      <li><a href="/about">&nbsp;&nbsp;About</a></li>
      <li><span>&nbsp;|&nbsp;</span></li>
      <li><a href="#" onclick="logout()">Logout</a></li>
    </ul>
  </nav>
  <section id='content'>
      <form class="form-inline">
        <div class="form-group">

          <label for="fromDate">From Date</label>
            <input type="text" id="fromdatepicker" class="form-control text-input"></input>&nbsp;&nbsp;
          <label for="toDate">To Date</label>
            <input type="text" id="todatepicker" class="form-control text-input"></input>&nbsp;

          <select class="selectpicker filter-select " id="view" style="display: inline" title="View">
            <option value="Simple" selected>Simple</option>
            <option value="Detailed">Detailed</option>
            <option value="None">No CSV</option>
          </select>

          <select class="selectpicker filter-select" multiple="multiple" id="attachments" style="display: inline" title="Select">
            <option value="recordings">Recorded Calls (.mp3)</option>
            <option value="voicemail">Voicemail (.mp3)</option>
            <!--option value="faxes">Faxes (.pdf))</option-->
          </select>
          <button id="readcalllogs" class="btn-rc" onclick="readCallLogs()" style="display:inline">Read Call Log</button>
        </div>
      </form>
      <br/>
      <div id="progress" style="display: none">
        <span><b>Read Call Log Progress</b></span>&nbsp;&nbsp;
        <img src='./img/loading.gif' id="readingAni" style='width:30px;height:30px;display: none'></img>
        <div id="timelapse"></div>
        <div id="info"></div>
        <div id="records-count"></div>
        <div id="rows-count"></div>
        <div id="attachments-count"></div>
        <!--a id="download_json" href="javascript:downloadCallLog('JSON')" style="display: none">Download Call Log (JSON)</a-->
        <a id="download_csv" href="javascript:downloadCallLog('CSV')" style="display: none">Download Call Log (.zip)</a>
        <a id="delete_csv" href="javascript:deleteCallLogZipFileCallLog()" style="display: none">Delete Call Log (.zip)</a>
      </div>
      <br/><br/>
      <div id="last_session" style="display: none">
        <div>Download Last Session File</div>
        <a id="download_lastsession_csv" href="javascript:downloadCallLog('CSV')" style="display: block">Download Last Read Call Log (.zip)</a>
        <a id="delete_lastsession_csv" href="javascript:deleteCallLogZipFileCallLog()" style="display: block">Delete Last Read Call Log (.zip)</a>
      </div>
  </section>
  <%- include('_footer') %>
</body>
</html>
